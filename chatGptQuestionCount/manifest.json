{
  "name": "ChatGPT Question Count",
  "version": "1.0",
  "author": "matheusetp@hotmail.com",
  "manifest_version": 2,
  "description": "Extension to count how many ChatGPT questions you asked.",
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "128.png"
  },
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "activeTab",
    "tabs",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["count.js"]
    }
  ]
}
