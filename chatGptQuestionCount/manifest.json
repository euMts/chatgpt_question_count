{
  "name": "ChatGPT Question Count",
  "version": "2.0",
  "author": "matheusetp@hotmail.com",
  "description": "Extension to count how many ChatGPT questions you asked.",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "webRequest", "storage"],
  "host_permissions": ["https://chat.openai.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "16.png",
    "32": "32.png",
    "48": "48.png",
    "128": "128.png"
  }
}
